@{
}

@model List<EShopAdminApplication.Models.Order>

<div class="container">

    <div class="row">
        <a class="btn btn-outline-danger" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>


    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Costumer Details</th>
                <th scope="col">Number of products</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.User.UserName</td>
                    <td>@item.productInOrders.Count()</td>
                    <td><a class="btn btn-outline-info" asp-action="Details" asp-route-orderId="@item.Id">View Order</a></td>
                </tr>

            }
        </tbody>


    </table>

</div>
